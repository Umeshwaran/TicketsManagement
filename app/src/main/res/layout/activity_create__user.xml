<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.ticketsmanagement.Create_User">

    <Spinner
        android:id="@+id/spinuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/Users"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="73dp"
        android:layout_marginStart="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"
        android:layout_below="@+id/spinuser"
        android:layout_alignLeft="@+id/spinuser"
        android:layout_alignStart="@+id/spinuser"/>

    <EditText
        android:id="@+id/contactu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:hint="Contact"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/Name"
        android:layout_alignLeft="@+id/Name"
        android:layout_alignStart="@+id/Name"/>

    <Spinner
        android:id="@+id/spin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:entries="@array/Location"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/contactu"
        android:layout_alignLeft="@+id/contactu"
        android:layout_alignStart="@+id/contactu"/>

    <Button
        android:id="@+id/create_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/spin"
        android:layout_alignRight="@+id/spin"
        android:layout_below="@+id/spin"
        android:layout_marginTop="47dp"
        android:text="Create"/>



</RelativeLayout>
